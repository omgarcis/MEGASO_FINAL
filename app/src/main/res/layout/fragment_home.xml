<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/reg">

        <TextView
            android:id="@+id/textView13"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="335dp"
            android:layout_height="46dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/montserrat_alternates_black_italic"
            android:text="Buscar Servicios"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="246dp"
            android:layout_height="87dp"
            android:fontFamily="@font/montserrat_alternates_black_italic"
            android:text="BIENVENIDO A MEGASO"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.138" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="210dp"
            android:layout_height="420dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="1.0">

            <Button
                android:id="@+id/btnLavadero"
                android:layout_width="210dp"
                android:layout_height="91dp"
                android:background="@drawable/car" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <Button
                android:id="@+id/btnGasolineras"
                android:layout_width="210dp"
                android:layout_height="91dp"
                android:background="@drawable/gasol" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <Button
                android:id="@+id/btnParqueaderos"
                android:layout_width="210dp"
                android:layout_height="91dp"
                android:background="@drawable/gg" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <Button
                android:id="@+id/btnMecanico"
                android:layout_width="210dp"
                android:layout_height="91dp"
                android:background="@drawable/mecanic" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>